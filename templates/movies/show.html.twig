{% extends "./base.html.twig" %}

{% block body %}
	<div class=" flex flex-col  items-center justify-centersm:w-3/5 w-4/5 mx-auto">
		<h1 class="pt-20 sm:text-5xl  md:text-7xl text-4xl font-bold text-center">
			{{ movie.title }}
		</h1>
         
		<div class="py-10 text-center">
			<div class="inline-block sm:pt-1">
				<h2 class="font-bold mb-2">
					Created by:Osama Ayub
				</h2>

				<p class="text-sm text-gray-600">
					28-01-2022 4 min. read
				</p>
			</div>
			<p class="text-sm text-gray-600">
					{{movie.description}}
				</p>
		</div>

		<img src="{{ movie.movieImg}}" class="rounded-md w-full  mb-8  shadow-xl" alt="Image of movie"/>

       {% if app.user and movie.userId == app.user.id %}
		{# update movie  #}
		<div class="flex gap-4">
			<a href="/movies/edit/{{ movie.id }}" class="bg-green-500 font-bold  py-2 px-4 rounded transition-all hover:bg-green-300">
				Edit Movie
			</a>
           {# delete movie #}
			<a href="/movies/delete/{{ movie.id }}" class="bg-red-500 font-bold py-2 px-4 ml-6 rounded transition-all hover:bg-red-300">
				Delete Movie
			</a>
		</div>
		{# {% endif %} #}

	</div>
{% endblock %}
